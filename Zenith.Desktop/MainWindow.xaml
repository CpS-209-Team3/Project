<Window x:Class="Zenith.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zenith.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="1120"
        Loaded="Window_Loaded">
    <Canvas x:Name="canView">
        <Canvas.Background>
            <ImageBrush ImageSource="universe.jpg"/>
        </Canvas.Background>
        <StackPanel Orientation="Vertical" Height="476" Canvas.Left="194" Width="720" Canvas.Top="57">
            <Image Source="zenithLogo.png" Height="151" Width="574" Margin="30,30,0,20"/>
            <Button x:Name="btn_Play" Content="Play Game" FontSize="30" FontWeight="DemiBold" Foreground="AliceBlue" BorderBrush="Transparent" Background="Transparent" Height="50" Width="175" Margin="0,0,0,5" Click="btn_Play_Click"/>
            <Button x:Name="btn_Load" Content="Load Game" FontSize="30" FontWeight="DemiBold" Foreground="AliceBlue" BorderBrush="Transparent" Background="Transparent" Height="50" Width="175" Margin="0,0,0,5" Click="btn_Load_Click"/>
            <Button x:Name="btn_HighScore" Content="High Scores" FontSize="30" FontWeight="DemiBold" Foreground="AliceBlue" BorderBrush="Transparent" Background="Transparent" Height="50" Width="175" Margin="0,0,0,5" Click="btn_HighScore_Click"/>
            <StackPanel Orientation="Horizontal" Margin="177,0,167,5" HorizontalAlignment="Center">
                <Button x:Name="btn_Help" Content="Help" FontSize="30" FontWeight="DemiBold" Foreground="AliceBlue" BorderBrush="Transparent" Background="Transparent" Height="50" Width="150" Margin="0,0,2,0" Click="btn_Help_Click"/>
                <Button x:Name="btn_Credits" Content="Credits" FontSize="30" FontWeight="DemiBold" Foreground="AliceBlue" BorderBrush="Transparent" Background="Transparent" Height="50" Width="150" Margin="2,0,0,0" Click="btn_Credits_Click"/>
            </StackPanel>
        </StackPanel>
        <TextBox x:Name="txtTest"/>
        <!--
        <Image Source="C:\Users\Caedmon\Desktop\Zenith\Zenith.Desktop\bin\Debug\Sprites\Pixel_Spaceships_for_SHMUP_1.4\Pixel_Spaceships_for_SHMUP_1.4/blue_01.png"></Image>
        -->
    </Canvas>
</Window>
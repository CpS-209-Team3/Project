<Page x:Class="Zenith.Desktop.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zenith.Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1120"
      Title="HighScorePage"
      Loaded="HighScorePage_Loaded">
    <Grid HorizontalAlignment="Center">
        <Grid.Background>
            <ImageBrush ImageSource="HighScoreBG.png"/>
        </Grid.Background>
        <StackPanel Margin="0,0,0,0.4">
            <TextBlock Text="Screen of Fame" FontSize="40" FontWeight="Bold" Foreground="AliceBlue" TextAlignment="Center" Height="55" Margin="406,40,401,0" Width="313"/>
        </StackPanel>
        <StackPanel Margin="117,121,87,100.4" Orientation="Horizontal">
            <TextBlock x:Name="lbl_top1to5" FontSize="30" Height="auto" Width="380" Margin="50,1,54,-0.2" Background="Aqua" />
            <TextBlock x:Name="lbl_top6to10" FontSize="30" Height="auto" Width="380" Background="Aqua" />
        </StackPanel>
        <Button x:Name="btn_Back" Content="Back" FontSize="25" Foreground="AliceBlue" FontWeight="DemiBold" Background="Transparent" BorderBrush="Transparent" Height="50" Width="60"  Margin="0,480,900,0" Click="btn_Back_Click"/>
    </Grid>
</Page>

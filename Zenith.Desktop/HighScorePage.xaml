<Page x:Class="Zenith.Desktop.HighScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zenith.Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1120"
      Title="HighScorePage"
      Loaded="HighScorePage_Loaded">
    <Grid HorizontalAlignment="Center" Width="auto">
        <Grid.Background>
            <ImageBrush ImageSource="HighScoreBG.png"/>
        </Grid.Background>
        <StackPanel Margin="0,0,0,0.4" Width="auto">
            <TextBlock Text="Astronauts of the Game" FontSize="40" FontFamily="Impact" FontWeight="Bold" Foreground="AliceBlue" TextAlignment="Center" Height="55" Width="auto" Margin="300,40,300,0"/>
        </StackPanel>
        <StackPanel Margin="102,121,101.4,100.4" Orientation="Horizontal">
            <TextBlock x:Name="lbl_top1to5" FontSize="30" FontFamily="Impact" Height="auto" Width="380" Margin="15,1,54,-0.2" Opacity="1" >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Gold" Offset="0"/>
                        <GradientStop Color="DarkOrange" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
            <TextBlock x:Name="lbl_top6to10" FontSize="30" FontFamily="Impact" Height="auto" Width="380" Background="Transparent" Opacity="1" />
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Gold" Offset="0"/>
                    <GradientStop Color="DarkOrange" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </StackPanel>
        <Button x:Name="btn_Back" Content="Back" FontSize="25" Foreground="AliceBlue" FontWeight="DemiBold" Background="Transparent" BorderBrush="Transparent" Height="50" Width="60"  Margin="0,480,900,0" Click="btn_Back_Click"/>
    </Grid>
</Page>
